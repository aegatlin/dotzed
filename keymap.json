// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "ctrl-w w": "workspace::ActivateNextPane",
      "alt-tab": "workspace::ActivateNextPane",
      "alt-shift-tab": "workspace::ActivatePreviousPane",
      "alt alt-tab": "workspace::ActivatePreviousPane",

      "ctrl-w v": "pane::SplitRight",
      "alt-v": "pane::SplitRight",
      "ctrl-w s": "pane::SplitDown",
      "alt-s": "pane::SplitDown",

      "ctrl-w h": "workspace::ActivatePaneLeft",
      "alt-h": "workspace::ActivatePaneLeft",
      "ctrl-w j": "workspace::ActivatePaneDown",
      "alt-j": "workspace::ActivatePaneDown",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "alt-k": "workspace::ActivatePaneUp",
      "ctrl-w l": "workspace::ActivatePaneLeft",
      "alt-l": "workspace::ActivatePaneRight",

      "alt-p": "pane::TogglePinTab",
      "alt-shift-p": "pane::UnpinAllTabs",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal",
    },
  },
  // vim sneak (rarely used)
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward",
    },
  },
]
